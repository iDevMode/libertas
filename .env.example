# =================================
# Data Liberation Platform
# Environment Configuration
# =================================

# Server Configuration
NODE_ENV=development
PORT=8000
CORS_ORIGINS=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://libertas:libertas_dev@localhost:5432/libertas

# For production:
# POSTGRES_USER=libertas
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_DB=libertas

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
# IMPORTANT: Change this in production! Must be at least 32 characters.
JWT_SECRET=dev-jwt-secret-change-in-production-must-be-32-chars
JWT_EXPIRES_IN=24h

# OAuth - Notion
# Get these from https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=http://localhost:3000/api/auth/notion/callback

# OAuth - Airtable
# Get these from https://airtable.com/create/oauth
AIRTABLE_CLIENT_ID=
AIRTABLE_CLIENT_SECRET=
AIRTABLE_REDIRECT_URI=http://localhost:3000/api/auth/airtable/callback

# OAuth - Google
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# File Storage
EXPORT_DIR=/tmp/libertas/exports

# Encryption (for storing OAuth tokens)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Production Only
# PUBLIC_API_URL=https://api.yourdomain.com

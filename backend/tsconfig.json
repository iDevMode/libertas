{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@connectors/*": ["./connectors/*"],
      "@transformers/*": ["./transformers/*"],
      "@destinations/*": ["./destinations/*"],
      "@jobs/*": ["./jobs/*"],
      "@api/*": ["./api/*"],
      "@auth/*": ["./auth/*"],
      "@common/*": ["./common/*"]
    }
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
